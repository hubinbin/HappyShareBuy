<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_layout_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mexue_6_dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/mexue_11_dip"
        android:paddingRight="@dimen/mexue_11_dip"
        android:paddingBottom="@dimen/mexue_10_dip"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mexue_10_dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recoed_item_avatar"
                android:layout_width="@dimen/mexue_22_dip"
                android:layout_height="@dimen/mexue_22_dip"
                android:scaleType="fitXY"
                android:src="@drawable/circular_gray" />
            
            <TextView
                android:id="@+id/recoed_item_name"
                style="@style/tv_32_black"
                android:textSize="@dimen/mexue_12_dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/mexue_8_dip"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/recoed_item_business"
            style="@style/tv_24_gray"
            android:layout_marginTop="@dimen/mexue_9_dip"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mexue_6_dip"
            android:layout_gravity="right"
            >
            
            <ImageView
                android:layout_width="@dimen/mexue_13_dip"
                android:layout_height="@dimen/mexue_13_dip"
                android:src="@mipmap/icon_time"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/recoed_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mexue_10_dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/mexue_6_dip"
                android:textColor="@color/gray_5E"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>