<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pic_info_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_layout_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/pic_info_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="暂无图片信息"
        android:layout_marginTop="@dimen/mexue_50_dip"
        android:textColor="@color/black"
        android:textSize="@dimen/mexue_17_dip"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pic_info_list"
        android:layout_margin="@dimen/mexue_11_dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>