<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/mexue_228_dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fillet_rectangle_wihte_solid"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_dialog_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mexue_36_dip"
            android:gravity="center"
            android:text="@string/hint"
            android:textColor="@color/black"
            android:textSize="@dimen/mexue_16_dip" />

        <TextView
            android:id="@+id/custom_dialog_hint_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mexue_14_dip"
            android:layout_marginRight="@dimen/mexue_14_dip"
            android:layout_marginTop="@dimen/mexue_13_dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/mexue_11_dip" />


        <View
            style="@style/gray_line"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/mexue_22_dip" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mexue_37_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/mexue_11_dip" />

            <View
                style="@style/gray_line"
                android:layout_width="0.5dp"
                 />

            <TextView
                android:id="@+id/custom_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/mexue_11_dip" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>