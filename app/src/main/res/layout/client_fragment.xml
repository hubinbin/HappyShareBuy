<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_layout_bg"
    android:orientation="vertical">

    <include
        layout="@layout/titile_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mexue_44_dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/client_fragment_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/client_fragment_all_tv"
                style="@style/tv_32_black"
                android:text="@string/all"
                android:textColor="@color/red_FC3D3D" />

            <View
                android:id="@+id/client_fragment_all_line"
                style="@style/tab_bottom_line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/client_fragment_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/client_fragment_sign_tv"
                style="@style/tv_32_black"
                android:text="@string/sign" />

            <View
                android:id="@+id/client_fragment_sign_line"
                style="@style/tab_bottom_line"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/client_fragment_intention"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/client_fragment_intention_tv"
                style="@style/tv_32_black"
                android:text="@string/intention" />

            <View
                android:id="@+id/client_fragment_intention_line"
                style="@style/tab_bottom_line"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/client_fragment_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/client_fragment_contact_tv"
                style="@style/tv_32_black"
                android:text="@string/contact" />

            <View
                android:id="@+id/client_fragment_contact_line"
                style="@style/tab_bottom_line"
                android:visibility="invisible" />

        </RelativeLayout>

    </LinearLayout>
    <View
        style="@style/gray_line"
        android:layout_height="0.5dp"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/client_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />


</LinearLayout>