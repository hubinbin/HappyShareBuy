<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/mexue_105_dip"
        android:horizontalSpacing="@dimen/mexue_3_dip"
        android:listSelector="@null"
        android:numColumns="3"
        android:verticalSpacing="@dimen/mexue_3_dip" />

    <TextView
        android:id="@+id/timeline_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cc000000"
        android:paddingBottom="5dp"
        android:paddingLeft="10sp"
        android:paddingTop="5dp"
        android:text="2015年4月1日"
        android:textColor="#CDCECE"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mexue_44_dip"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bg"
        android:clickable="true" >

        <View
            style="@style/information_list_line"
           />

        <Button
            android:id="@+id/category_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="@dimen/mexue_7_dip"
            android:drawableRight="@mipmap/icon_text_indicator"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mexue_13_dip"
            android:paddingRight="@dimen/mexue_13_dip"
            android:singleLine="true"
            android:text="@string/all_picture"
            android:textColor="@color/navigation_bar_background"
            android:textSize="@dimen/mexue_15_dip" />

        <Button
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:minHeight="1dp"
            android:minWidth="1dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="预览(1)"
            android:textColor="@color/navigation_bar_background"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>